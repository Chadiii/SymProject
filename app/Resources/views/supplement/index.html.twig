{% extends 'base.html.twig' %}

{% block body %}
    <h1>Supplements list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for supplement in supplements %}
            <tr>
                <td><a href="{{ path('supplement_show', { 'id': supplement.id }) }}">{{ supplement.id }}</a></td>
                <td>{{ supplement.nom }}</td>
                <td>{{ supplement.prix }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('supplement_show', { 'id': supplement.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('supplement_edit', { 'id': supplement.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('supplement_new') }}">Create a new supplement</a>
        </li>
    </ul>
{% endblock %}
