{% extends 'base.html.twig' %}

{% block body %}
    <h1>Supplement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ supplement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ supplement.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ supplement.prix }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('supplement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('supplement_edit', { 'id': supplement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
