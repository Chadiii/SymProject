{% extends '@SYMRestau/base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Menu</h1>

    <div class="row mt-5">
        {% for menu in menus %}
            <div class="col-12 col-lg-6 col-xl-4">
                <div class="card mb-3">
                    <div class="card-header">
                        <h3>{{ menu.nom }}</h3>
                        <h4><span class="badge badge-primary">{{ menu.prix }} Dh</span></h4>
                    </div>
                    <img class="img-responsive" style="height: 200px;  display: block; object-fit: cover;" src="{{ menu.image }}" alt="Card image">
                    <div class="card-footer">
                        <a href="{{ path('show', { 'id': menu.id }) }}" class="card-link">Voir</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}