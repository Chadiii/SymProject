{% extends '@SYMRestau/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Connexion</h1>
    
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
          <form class="col-4" method="POST" action="{{path('login')}}">
            <fieldset>
              <div class="form-group">
                <label for="exampleInputLogin">Login</label>
                <input type="login" class="form-control" name="login" id="exampleInputLogin" placeholder="Enter login" required>
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password" required>
              </div>
              {% if errorMessage != null %}
                <div class="alert alert-danger">
                    {{ errorMessage }}
                </div>
                {% endif %}
              <input type="submit" class="btn btn-outline-primary" value="Me connecter">
            </fieldset>
          </form>
        </div>
      </div>
</div>
{% endblock %}
